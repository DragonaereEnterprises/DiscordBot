{
  "compilerOptions": {
    "module": "commonjs",  
    "target": "es2022",
    "rootDir": "./",
    "outDir": "./build",   
    "removeComments": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "strictNullChecks": true,
    "jsx": "react",
    "allowUmdGlobalAccess": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}